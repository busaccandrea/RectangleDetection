<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pavel11.rectangledetection.SeeRectActivity">


    <ImageView
        android:id="@+id/mostraFoto"
        android:layout_width="332dp"
        android:layout_height="245dp"
        app:srcCompat="@android:color/transparent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.507" />

    <TextView
        android:id="@+id/luogofoto"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomefoto" />

    <TextView
        android:id="@+id/datafoto"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luogofoto" />

    <TextView
        android:id="@+id/nomefoto"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostraFoto" />

    <TextView
        android:id="@+id/fissoLuogo"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Luogo"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/luogofoto"
        app:layout_constraintTop_toBottomOf="@+id/fissoNome" />

    <TextView
        android:id="@+id/fissoData"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Data"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/datafoto"
        app:layout_constraintTop_toBottomOf="@+id/fissoLuogo" />

    <TextView
        android:id="@+id/fissoNome"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Nome Foto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nomefoto"
        app:layout_constraintTop_toBottomOf="@+id/mostraFoto" />

</android.support.constraint.ConstraintLayout>
